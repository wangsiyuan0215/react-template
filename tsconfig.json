{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        // "noImplicitAny": true,
        "removeComments": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        // "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "lib": ["es6", "dom", "webworker"],
        "baseUrl": "./",
        "paths": {
            "components": ["src/components/index"],
            "languages": ["src/languages/index"],
            "models": ["src/models/index"],
            "models/*": ["src/models/*"],
            "resources": ["src/resources"],
            "routes/*": ["src/routes/*"],
            "services": ["src/services"],
            "utils": ["src/utils"]
        }
    },
    "include": [
        "./src/**/*",
        "./src/*"
    ],    
    "exclude": [
        "node_modules"
    ]
}